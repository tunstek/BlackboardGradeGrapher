{
  "manifest_version": 2,

  "name": "Get pages source",
  "version": "1.0",

  "description": "Get a graph of your results in the 'My Grades' secton.",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self'  https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.bundle.js; object-src 'self'"
,


 "web_accessible_resources": [
      "style.css"
  ],

"background":{
    "scripts":["plots.js"]
},

"content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["popup.js"]

   }
 ],

  "permissions": ["tabs", "<all_urls>"]
}
