{
  "manifest_version": 2,

  "name": "Blackboard Grade Grapher",
  "short_name": "BB Grapher",
  "version": "1.0",

  "description": "Get a graph of your results in the 'My Grades' secton. (TCD ONLY)",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": { "32": "icon.png",
             "64": "icon64.png",
             "128": "icon128.png" },


 "web_accessible_resources": [
      "style.css"
  ],


"content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["popup.js"]

   }
 ],

  "permissions": ["tabs", "<all_urls>"]
}
